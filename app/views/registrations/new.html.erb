<h1><%= I18n.t('view.registration.heading_text') %></h1>

<%= form_with model: @user_1, url: registrations_path do |form| %>

  <div>
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>

  <div>
    <%= form.label :email %>
    <%= form.email_field :email %>
  </div>

  <div>
    <%= form.label :password %>
    <%= form.password_field :password %>
  </div>

  <div>
    <%= form.label :password_confirmation %>
    <%= form.password_field :password_confirmation %>
  </div>

  <div>
    <%= form.submit I18n.t('view.registration.button_text') %>
  </div>
<% end %>
