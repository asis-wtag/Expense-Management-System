<h1><%= I18n.t('view.password.update_heading_text') %></h1>

<%= form_with model: current_user, url: password_path do |form| %>
  <%if form.object.errors.any? %>
    <% form.object.errors.full_messages.each do |message| %>
      <div><%= message %></div>
    <% end %>
  <% end %>

  <div>
    <%= form.label :password_challenge, I18n.t('view.password.current_password_label_text') %>
    <%= form.password_field :password_challenge %>
  </div>

  <div>
    <%= form.label :password, I18n.t('view.password.new_password_label_text') %>
    <%= form.password_field :password %>
  </div>

  <div>
    <%= form.label :password_confirmation %>
    <%= form.password_field :password_confirmation %>
  </div>

  <div>
    <%= form.submit I18n.t('view.password.button_text') %>
  </div>
<% end %>
