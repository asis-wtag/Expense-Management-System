<% if @user_organizations.present? %>
  <ul>
    <li><%= link_to "Invite People", invite_people_organization_path(@user_organizations.first.organization.id) %></li>
  </ul>

  <h2> <%= @user_organizations.first.organization.name %> Organization People Details</h2>
  <table>
    <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Invitation</th>
      <th>Role</th>
    </tr>
    </thead>
    <tbody>
    <% @user_organizations.each do |user_organization| %>
      <tr>
        <td><%= user_organization.user.name %></td>
        <td><%= user_organization.user.email %></td>
        <td><%= user_organization.invitation %></td>
        <td><%= user_organization.role %></td>
        <% if user_organization.role=='non-admin' && user_organization.invitation=='accepted'  %>
          <td>
            <%= link_to 'Make Admin', make_admin_organization_path(user_organization.organization.id, user_id: user_organization.user.id) %>
          </td>
        <% end %>
      </tr>
    <% end %>
    </tbody>
  </table>
<% else %>
  <p>No user organizations found.</p>
<% end %>
