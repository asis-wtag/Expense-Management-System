<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <h2 class="mb-4"><%= I18n.t('view.organizations.filtered_trading.heading_message', organization_name: @organization.name) %></h2>

      <% if @filtered_tradings.present? %>
        <table class="table table-bordered table-striped">
          <thead>
          <tr>
            <th><%= I18n.t('view.organizations.filtered_trading.added_at_table_heading_message') %></th>
            <th><%= I18n.t('view.organizations.filtered_trading.added_by_table_heading_message') %></th>
            <th><%= I18n.t('view.organizations.filtered_trading.amount_table_heading_message') %></th>
          </tr>
          </thead>
          <tbody>
          <% @filtered_tradings.each do |trading| %>
            <tr>
              <td><%= trading.created_at.strftime("%Y-%m-%d %H:%M:%S") %></td>
              <td><%= trading.user.email %></td>
              <td><%= trading.amount %></td>
            </tr>
          <% end %>
          </tbody>
        </table>
      <% else %>
        <p><%= I18n.t('view.organizations.filtered_trading.no_trading_found_message') %></p>
      <% end %>

      <hr>

      <h2 class="mb-4"><%= I18n.t('view.organizations.filtered_trading.comments_div_title') %></h2>

      <% if @filtered_comments.present? %>
        <div class="table-responsive">
          <table class="table table-bordered">
            <tbody>
            <% @filtered_comments.each do |comment| %>
              <tr>
                <td><%= comment.user.email %></td>
                <td><%= comment.created_at.strftime("%Y-%m-%d %H:%M:%S") %></td>
                <td><%= comment.body %></td>
              </tr>
            <% end %>
            </tbody>
          </table>
        </div>
      <% else %>
        <p><%= I18n.t('view.organizations.filtered_trading.no_comment_found_message') %></p>
      <% end %>

    </div>
  </div>
</div>
