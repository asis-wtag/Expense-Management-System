<% if @user_organizations.present? %>
  <div class="container mt-5">
    <div class="row justify-content-center">
      <div class="col-md-8">
        <h2><%= I18n.t('view.organizations.invitation.heading_title_message') %></h2>
        <table class="table table-bordered table-striped">
          <thead>
          <tr>
            <th><%= I18n.t('view.organizations.invitation.organization_name_table_heading_message') %></th>
            <th><%= I18n.t('view.organizations.invitation.organization_invitation_time_table_heading_message') %></th>
            <th colspan="2"><%= I18n.t('view.organizations.invitation.organization_action_table_heading_message') %></th>
          </tr>
          </thead>
          <tbody>
          <% @user_organizations.each do |user_organization| %>
            <tr>
              <td><%= user_organization.organization.name %></td>
              <td><%= user_organization.created_at %></td>
              <td>
                <%= link_to I18n.t('view.organizations.invitation.accept_link_text'), accept_invitation_organization_path(user_organization.organization.id), class: "btn btn-success", data: { turbo_method: :patch } %>
              </td>
              <td>
                <%= link_to I18n.t('view.organizations.invitation.reject_link_text'), reject_invitation_organization_path(user_organization.organization.id), class: "btn btn-danger", data: { turbo_method: :patch } %>
              </td>
            </tr>
          <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
<% else %>
  <div class="container mt-5">
    <div class="row justify-content-center">
      <div class="col-md-8">
        <p class="fs-5"><%= I18n.t('view.organizations.invitation.no_pending_invitation_message') %></p>
      </div>
    </div>
  </div>
<% end %>
