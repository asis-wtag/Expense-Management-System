<h1><%= I18n.t('view.session.heading_text') %></h1>

<%= form_with model: @user, url: session_path do |form| %>
  <% if @user.present? && form.object.errors.any? %>
    <% form.object.errors.full_messages.each do |message| %>
      <div><%= message %></div>
    <% end %>
  <% end %>

  <div>
    <%= form.label :email %>
    <%= form.email_field :email %>
  </div>

  <div>
    <%= form.label :password %>
    <%= form.password_field :password %>
  </div>

  <div>
    <%= form.submit I18n.t('view.session.button_text') %>
  </div>
<% end %>

<%= link_to I18n.t('view.session.forgot_password_link_text'), new_password_reset_path %>
