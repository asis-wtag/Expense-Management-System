<div class="container mt-4">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="card">
        <div class="card-body">
          <h1 class="card-title"><%= I18n.t('view.session.heading_text') %></h1>

          <%= form_with model: @user, url: session_path do |form| %>
            <% if @user.present? && form.object.errors.any? %>
              <% form.object.errors.full_messages.each do |message| %>
                <div class="alert alert-danger" role="alert">
                  <%= message %>
                </div>
              <% end %>
            <% end %>

            <div class="mb-3">
              <%= form.label :email, class: "form-label" %>
              <%= form.email_field :email, class: "form-control" %>
            </div>

            <div class="mb-3">
              <%= form.label :password, class: "form-label" %>
              <%= form.password_field :password, class: "form-control" %>
            </div>

            <div class="mb-3">
              <%= form.submit I18n.t('view.session.button_text'), class: "btn btn-primary" %>
            </div>
          <% end %>

          <%= link_to I18n.t('view.session.forgot_password_link_text'), new_password_reset_path, class: "btn btn-link" %>
        </div>
      </div>
    </div>
  </div>
</div>
